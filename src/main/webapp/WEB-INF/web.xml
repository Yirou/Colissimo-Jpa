<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>/ajout-colis</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ListeColis</servlet-name>
        <servlet-class>com.logical.colissimos.servlet.ListeColisServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutColis</servlet-name>
        <servlet-class>com.logical.colissimos.servlet.AjoutColisServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SuivreColisServlet</servlet-name>
        <servlet-class>com.logical.colissimos.servlet.SuivreColisServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AjoutPosition</servlet-name>
        <servlet-class>com.logical.colissimos.servlet.AjoutPositionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeColis</servlet-name>
        <url-pattern>/liste-colis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutColis</servlet-name>
        <url-pattern>/ajout-colis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SuivreColisServlet</servlet-name>
        <url-pattern>/suivre-colis</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AjoutPosition</servlet-name>
        <url-pattern>/ajout-position</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
